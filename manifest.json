{
  "manifest_version": 3,
  "name": "AgentShield",
  "version": "0.3",
  "description": "Scanne une page et signale les risques d'injection pour navigateurs IA.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icones/icone128.png",
    "48": "icones/icone128.png",
    "128": "icones/icone128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
    "16": "icones/icone128.png",
    "48": "icones/icone128.png",
    "128": "icones/icone128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
